<h1>投稿一覧</h1>

<%= link_to "新規投稿", new_post_path, class: "btn btn-primary" %>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post %>
      <span style="color:#aaa; font-size: 12px;">
        （<%= post.created_at.strftime("%Y/%m/%d") %>）
      </span>
    </li>
  <% end %>
</ul>

<%= link_to "戻る", posts_path %>