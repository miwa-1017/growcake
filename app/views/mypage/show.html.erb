<div class="exercise-wrapper text-center">
  <h2><%= @user.name %> さんのページ</h2>
  <p>メールアドレス：<%= @user.email %></p>

  <div class="cake-select">
    <h3>ケーキタイプ設定</h3>

  <% if current_user.cake_type.blank? %>
    <%= form_with model: current_user, url: mypage_path, method: :patch, local: true do |f| %>
      <div class="cake-select-box">
        <%= f.radio_button :cake_type, :tarte %>
        <%= f.label :cake_type_tarte, "タルト" %>

        <%= f.radio_button :cake_type, :shortcake %>
        <%= f.label :cake_type_shortcake, "ショートケーキ" %>
      </div>

      <%= f.submit "決定する", class: "btn mt-3" %>
    <% end %>

  <% else %>
    <p>あなたのケーキタイプ：<strong><%= current_user.cake_type %></strong></p>
    <%= link_to "変更する", edit_mypage_path, class: "btn mt-3" %>
  <% end %>

  <p class="mt-4">現在の成長ポイント：<%= @growth_point %>pt</p>

  <div class="mypage-edit-link">
    <%= link_to "マイページ情報を編集する", edit_mypage_path, class: "btn" %>
    <%= link_to "筋トレの記録を見る", exercise_logs_path, class: "btn btn-outline mt-3" %>
    <% if current_user.growth_logs.exists? %>
      <%= link_to "ケーキの成長を見る", growth_log_path(current_user.growth_logs.last), class: "btn mt-3" %>
    <% else %>
      <%= link_to "ケーキを育て始める", growth_path, class: "btn mt-3" %>
    <% end %>
  </div>

</div>